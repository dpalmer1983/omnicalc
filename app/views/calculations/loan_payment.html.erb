<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Loan Payment Results</h3>
  </div>
  <div class="panel-body">
    <dl class="dl-horizontal">
      <dt>APR</dt>
      <dd><%= @apr %>%</dd>

      <dt>Monthly rate</dt>
      <dd><%= @monthly_rate %>%</dd>


      <dt>Number of years</dt>
      <dd><%= @years %></dd>
      <dt>Number of months</dt>
      <dd><%= @num_months %></dd>

      <dt>Principal</dt>
      <dd><%= number_to_currency(@principal) %></dd>

      <dt>Numerator</dt>
      <dd><%= @numerator %></dd>
      <dt>Power</dt>
      <dd><%= @power %></dd>
      <dt>Base</dt>
      <dd><%= @base %></dd>

      <dt>Denominator</dt>
      <dd><%= @denominator %></dd>



      <dt>Monthly Payment</dt>
      <dd><%= number_to_currency(@monthly_payment) %></dd>
    </dl>
  </div>
</div>
